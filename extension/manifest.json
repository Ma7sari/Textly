{
  "manifest_version": 3,
  "name": "Writing Assistant MVP",
  "version": "0.1.0",
  "description": "Write drafts into focused fields on explicit trigger.",
  "action": {
    "default_title": "Writing Assistant",
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": ["activeTab", "scripting", "storage"],
  "host_permissions": ["http://localhost:3001/*"],
  "commands": {
    "open-popup": {
      "suggested_key": {
        "default": "Ctrl+Shift+K"
      },
      "description": "Open the popup"
    },
    "cancel-typing": {
      "suggested_key": {
        "default": "Esc"
      },
      "description": "Cancel ongoing typing"
    }
  }
}
